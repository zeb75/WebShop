@model IEnumerable<WebShop.Models.CartItem>

@{
    ViewBag.Title = "Cart";
}

<h2>Shopping Cart</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            Total Price
        </th>
        <th>
            Add/Remove
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Price)kr
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @(item.Amount * item.Product.Price)kr
            </td>
            <td>
                @Html.ActionLink("+", "EditCart", new { id = item.Id, edit = "plus" }, new { @class = "btn btn-default btn-xs" })
                @Html.ActionLink("-", "EditCart", new { id = item.Id, edit = "minus" }, new { @class = "btn btn-default btn-xs" })
            </td>
        </tr>
    }

</table>
<h3>Total sum: @{
    var tot = 0;
    foreach (var item in Model)
    {
        tot = tot + (item.Amount * item.Product.Price);
    }
} 
@(tot)kr</h3>
@Html.ActionLink("Checkout", "Checkout", null, new { @class = "btn btn-success" })

